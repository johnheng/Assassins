@model Assassins.Models.Game

@{ ViewBag.Title = "Assign Targets"; }

<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Current)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Current)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Registration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Registration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

    </dl>
</div>

<div>
    @using (Html.BeginForm("AssignTargetsConfirm", "Admin", FormMethod.Post))
    {
        <div class="form-group">
            <h2>Are you sure you want to assign targets for this game? <p class="lead" style="margin-bottom: 5px">When this happens, players will be able to see their targets. Players cannot submit a kill until the game has started however. Registration will also end and players can no longer join the game. If players already assigned targets, this will overwrite them.</p></h2>
            @Html.HiddenFor(model => model.Id)
            @Html.ActionLink("Back to List", "ManageGames", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
            <input type="submit" value="Confirm" class="btn btn-success" />
        </div>
    }
</div>