@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <meta name="description" content="Assassins is a web app that allows you to play with less fuss and headache. It makes organizing a game easier and more streamline.">
    <meta name="keywords" content="assassins,assassin,college,webapp,vcu,csa,vcucsa,university">
    <meta name="author" content="John Heng">

    <title>@ViewBag.Title - Assassins</title>
    
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Yellowtail' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=News+Cycle' rel='stylesheet' type='text/css'>

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/minimal/css/main.css" rel="stylesheet" />
    <link href="~/Content/material.css" rel="stylesheet" />

    <script src="~/Content/minimal/js/jquery.min.js"></script>
    <script src="~/Content/minimal/js/bootstrap.js"></script>
    <script src="~/Content/minimal/js/Chart.js"></script>
    <script src="~/Content/minimal/js/smoothscroll.js"></script>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.knob.js"></script>
    <script src="~/Scripts/jquery.timeago.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <link href="~/Content/minimal/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body data-spy="scroll" data-offset="0" data-target="#theMenu" style="padding-bottom:0px; padding-top:0px">
    <!-- Menu -->
    <nav class="menu" id="theMenu">
        <div class="menu-wrap">
            <h1 class="logo">@Html.ActionLink("Assassins", "Index", "Home", null, new { @class = "smoothScroll" })</h1>
            <i class="icon-remove menu-close"></i>
            @Html.ActionLink("Home", "Index", "Home", null, new { @class="smoothScroll" })
            <a href="#players" class="smoothScroll">Players</a>
            <a href="#events" class="smoothScroll">Events</a>
            <a href="#rules" class="smoothScroll">Rules</a>
            <a href="#history" class="smoothScroll">History</a>
            @Html.ActionLink("FAQs", "About", "Home", routeValues: null, htmlAttributes: new { title = "FAQs" })
            @Html.ActionLink("Past Games", "PastGames", "Home", routeValues: null, htmlAttributes: new { title = "Past Games" })
            <hr class="menu-hr"/>
            @Html.Partial("_AssassinsLoginPartial")
            <a href="https://www.facebook.com/groups/vcucsa/" target="_blank"><i class="fa fa-facebook fa-fw"></i></a>
            <a href="https://instagram.com/explore/tags/csavcu/" target="_blank"><i class="fa fa-instagram fa-fw"></i></a>
            @*<a href="#"><i class="icon-dribbble"></i></a>
            <a href="#"><i class="icon-envelope"></i></a>*@
        </div>

        <!-- Menu button -->
        @*<div id="menuToggle"><i class="icon-reorder"></i></div>*@
        @*<div id="menuToggle" class="toggle">*@
       
        @*</div>*@
        <a href="#" id="menuToggle" class="toggle">
            <i class="icon" id="arrow"></i>
        </a>
    </nav>

    


    @RenderBody()

    @if (Request.IsAuthenticated)
    {
        @Html.Partial("_Profile");
    }
    
    @*@Scripts.Render("~/bundles/assassins")
    @Scripts.Render("~/bundles/bootstrap")
    
    @RenderSection("scripts", required: false)*@

    <script src="~/Scripts/assassins.js"></script>
    <script src="~/Content/minimal/js/main.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/respond.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

